# Azure OpenAI Configuration Template
# Copy this file to .env.local and fill in your credentials
# .env.local is git-ignored and will not be committed

# Azure OpenAI Configuration
AZURE_API_KEY=your_api_key_here
AZURE_ENDPOINT=your_endpoint_here
AZURE_API_BASE=your_api_base_here
AZURE_API_VERSION=2025-04-01-preview

# Model Deployments
AZURE_MINI_DEPLOYMENT_NAME=gpt-4o-mini
AZURE_CHAT_DEPLOYMENT_NAME=gpt-4o
AZURE_EMBEDDING_DEPLOYMENT=text-embedding-3-large

# Processing Configuration (adjust as needed)
MAX_TOKENS_PER_REQUEST=4000
TEMPERATURE=0.7
PDF_CHUNK_SIZE=2000
