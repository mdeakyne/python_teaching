# Azure AI Foundry Configuration Template
# Copy this file to .env.local and fill in your credentials
# .env.local is git-ignored and will not be committed

# Azure AI Project Configuration
AZURE_PROJECT_CONNECTION_STRING=your_project_connection_string_here
AZURE_AI_PROJECT_NAME=your_project_name_here
AZURE_RESOURCE_GROUP=your_resource_group_here
AZURE_SUBSCRIPTION_ID=your_subscription_id_here

# Azure AI Agent Configuration
AZURE_AI_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_AI_API_KEY=your_api_key_here

# Optional: Azure Authentication (use either API key above OR these)
# AZURE_TENANT_ID=your_tenant_id_here
# AZURE_CLIENT_ID=your_client_id_here
# AZURE_CLIENT_SECRET=your_client_secret_here

# Model Configuration
AZURE_AI_MODEL_DEPLOYMENT=gpt-4  # or your deployed model name
AZURE_AI_MODEL_VERSION=turbo-2024-04-09  # or your model version

# Processing Configuration (adjust as needed)
MAX_TOKENS_PER_REQUEST=4000
TEMPERATURE=0.7
PDF_CHUNK_SIZE=2000  # characters per chunk for processing
